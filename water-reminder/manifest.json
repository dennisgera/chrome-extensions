{
    "manifest_version": 3,
    "name": "Water Reminder",
    "version": "1.0.0",
    "description": "Reminds you to drink water every hour.",
    "permissions": ["alarms", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "128": "images/icon128.png"
    }
  }
  